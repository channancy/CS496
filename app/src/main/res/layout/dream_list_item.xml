<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvComma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName"
        android:layout_toRightOf="@+id/tvName"
        android:text=", "
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tvBirthYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birth Year"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@+id/tvComma"
        android:layout_alignBaseline="@+id/tvComma"/>

    <TextView
        android:id="@+id/tvComma2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvBirthYear"
        android:layout_toRightOf="@+id/tvBirthYear"
        android:text=", "
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvComma2"
        android:layout_toRightOf="@+id/tvComma2"
        android:text="Location"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvDreamDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dream Description"
        android:layout_below="@+id/tvName"
        android:textColor="@android:color/white"
        />

</RelativeLayout>